<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:background="@drawable/rounded_background"
    >

    <TextView
        android:id="@+id/entry_editName"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textAlignment="viewStart"
        android:textColor="@color/dblue"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Youtube" />

    <TextView
        android:id="@+id/entry_username"
        android:layout_width="199dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="41dp"
        android:textColor="@color/dblue"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/entry_editName"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="sampleUsername" />

    <TextView
        android:id="@+id/entry_password"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:textColor="@color/dblue"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/entry_editName"
        app:layout_constraintTop_toBottomOf="@+id/entry_username"
        tools:text="samplePassword" />

</androidx.constraintlayout.widget.ConstraintLayout>